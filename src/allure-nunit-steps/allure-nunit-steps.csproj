    <RootNamespace>NUnit.Allure.Steps</RootNamespace>
    <AssemblyName>NUnit.Allure.Steps</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.1.0-alfa1</Version>
    <Authors>Nick Chursin</Authors>
    <Description>Steps Attribute for NUnit.Allure</Description>
    <PackageId>NUnit.Allure.Steps</PackageId>
    <AssemblyName>NUnit.Allure.Steps</AssemblyName>
    <RootNamespace>NUnit.Allure.Steps</RootNamespace>
